<%- include('./_header') %>



    <!-- Page Content -->
    <div class="container">

        <!-- Portfolio Item Heading -->
        <div class="row">
             <div class="col-md-3">
                <img class="img-responsive img-thumbnail" src="http://placehold.it/200x200" alt="">
            </div>
            <div class="col-md-9">
                <h1 class="page-header"><%=name%>
                    <% if(account && !isMyAccount) { // Logged and another account %> 
                    <a href="#"><small style="color: green;"> Add user <span class="glyphicon glyphicon-plus" ></span></small></a>
                    <a href="#"><small style="color: #EEA236;"> Chat <span class="glyphicon glyphicon-envelope" ></span></small></a>
                    <% } else if (account && isMyAccount) { // Logged in and own account %>
                    <a href="#"><small><span class="glyphicon glyphicon-pencil" ></span>Edit</small></a>
                    <% } %>
                </h1>
            </div>
        </div>
        <!-- /.row -->

        <!-- Portfolio Item Row -->
        <div class="row">

            <div class="col-md-6">

                <h2>Bio</h2> 
                
                <% if(account && isMyAccount) { %>
                <a href="#"><small><span class="glyphicon glyphicon-pencil" ></span>Edit</small></a>
                <% } %>
                
                <div class="container" style="margin-top:20px;">
                  <div class="row">
                    <div class="col-lg-12">

                      <p><%=bio%></p>     

                    </div>
                  </div>
                </div>

               
            </div>

        </div>
        <!-- /.row -->

        <!-- Related Projects Row -->
        <div class="row">

            <!--If user is not logged in-->
            <% if(!account) { %>
            <div class="col-lg-12">
                <h2>Interests</h3>
            </div>

            <% let i=0; interests && interests.forEach( (interest) => { %>
            <div class="col-sm-3 col-xs-6">
                <a href="/#/interest/<%=interest%>">
                    <img class="img-responsive portfolio-item" src="http://placehold.it/500x300" alt="">
                </a>
            </div>
            
            <!--If user is logged in and in someone else's profile-->
            <%  }); } else if(account && !isMyAccount) { %>
            
                <!--If there are common interests-->
            <% if(common && common.length) { %>
            <div class="col-lg-12">
                <h2>Common Interests</h3>
            </div>

            <% common && common.forEach( (interest) => { %>
            <div class="col-sm-3 col-xs-6">
                <a href="/#/interest/<%=interest%>">
                    <img class="img-responsive portfolio-item" src="http://placehold.it/500x300" alt="">
                </a>
            </div>
            <% } ); } %>
            
                <!--If there are different interests-->
            <% if(different && different.length) { %>
            <div class="col-lg-12">
                <h2><%=common && !common.length ? "" : "Other"%> Interests</h3>
            </div>
            
            <% different && different.forEach( (interest) => { %>
            <div class="col-sm-3 col-xs-6">
                <a href="/#/interest/<%=interest%>">
                    <img class="img-responsive portfolio-item" src="http://placehold.it/500x300" alt="">
                </a>
            </div>
            <% });} %>
            
             <!--If user is logged in and in own profile-->
            <% } else if(account && isMyAccount) { %>
            <div class="col-lg-12">
                <h2>My Interests</h3>
            </div>

            <% interests && interests.forEach( (interest) => { %>
            <div class="col-sm-3 col-xs-6">
                <a href="/#/interest/<%=interest%>">
                    <img class="img-responsive portfolio-item" src="http://placehold.it/500x300" alt="">
                </a>
                <a><span class="glyphicon glyphicon-remove" ></span></a>
            </div>
            <% }) } %>

           

        </div>
        <!-- /.row -->

        <hr>

      
<%- include('./_footer') %>