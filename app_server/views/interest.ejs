<%- include('./_header') %>
<%- include('./_search') %>
    
    <!--Interest-->
    <div class="container contents-container">
        <div class="row" id="interest-title">
            <div class="col-xs-7 col-md-10">
                <h1 class="text-info"><%=title%></h1>
            </div>
            <div class="col-xs-5 col-md-2" id="interested-link">
                <% if(typeof account === "object" && account && account.interests.indexOf(title) !== -1) { %>
                <p id="interest-link">You are interested! <span style="color: #8CBF75;" class="glyphicon glyphicon-ok"></span></p>
                <% } else {%>
                <a class="btn btn-default" id="interest-link" href="#">Add as an interest</a>
                <% } %>
            </div>
        </div>

        <div class="row product">
            <div class="col-md-4 col-md-offset-0"><img src="http://placehold.it/400x400" class="img-responsive rounded" /></div>
            <div class="col-md-8">
                <div class="row">
                    <div class="col-md-12">
                        <% let text = users.length > 1 ? "people are" : "person is"; %>
                        <h3><%=users.length + " " + text%> interested</h3></div>
                </div>
                <% if(users.length) {
                        users.forEach( (user) => {
                %>
                <div class="row">
                    <div class="col-md-10">
                        <div class="media">
                            <div class="media-left">
                                <a><img class="media-object img-thumbnail" src="http://placehold.it/80x80" /></a>
                            </div>
                            <div class="media-body">
                                <h4 class="media-heading"><%=user.name%></h4>
                                <p class="text-left"><%=user.bio%></p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2 col-md-offset-0 col-xs-1 col-xs-offset-9">
                        <a href="#">
                            <span class="glyphicon glyphicon-envelope message" aria-hidden="true"></span> 
                        </a>
                    </div>
                    <div class="col-md-2 col-xs-1">
                        <a href="#">
                            <span class="glyphicon glyphicon-plus add" aria-hidden="true"></span> 
                        </a>
                    </div>
                </div>
                <% })} %>
            
                
                
                <% if(users.length > 3) { %>
                <div class="row">
                    <div class="col-xs-12 col-xs-offset-9"><a href="#" >See all</a></div>
                </div>
                <% } %>
                
            </div>
        </div>
     
        <% if(description.length) { %>
        <div class="page-header">
            <h3>Details</h3>
        </div>
        <p><%=description%></p>
        <% } %>
        
        <div class="page-header">
            <h3>Explore </h3>
            
            <!--React Application starts here-->
            <div class="react-container"></div>
            <!--End React Application-->
            
        </div>
    </div>
    
</div>
<%- include('./_footer') %>